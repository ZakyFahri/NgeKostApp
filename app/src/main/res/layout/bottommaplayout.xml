<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_maps_bg">

    <TextView
        android:id="@+id/namakost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Pondok Cora"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/robotoblack"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:gravity="center">
    </TextView>

    <ImageView
        android:id="@+id/gambarkost"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true">
    </ImageView>

    <TextView
        android:id="@+id/namapemilikkost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/robotoregular"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/pemilikkostdetail"
        android:drawablePadding="10dp">
    </TextView>

    <TextView
        android:id="@+id/notelppemilikkost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/robotoregular"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/phonesmall"
        android:drawablePadding="10dp">
    </TextView>

    <TextView
        android:id="@+id/alamatkost"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/petakostsmall"
        android:drawablePadding="10dp"
        android:fontFamily="@font/robotoregular"
        android:textColor="@color/black"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonKeDash"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Lihat Detail"
            android:textColor="@color/black"
            android:background="@drawable/ripplebutton"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/robotomedium"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textAllCaps="false">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonKeRute"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Lakukan Rute"
            android:textColor="@color/black"
            android:background="@drawable/ripplebutton"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/robotomedium"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textAllCaps="false">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>



</LinearLayout>