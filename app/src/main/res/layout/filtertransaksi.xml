<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort &amp; Filter"
        android:fontFamily="@font/robotoregular"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"/>

    <RadioGroup
        android:id="@+id/filterdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <RadioButton
            android:id="@+id/radiomenungguKonfirmasi"
            android:paddingLeft="30dp"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi : Menunggu Konfirmasi"/>

        <RadioButton
            android:id="@+id/radiotelahkonfirm"
            android:paddingLeft="30dp"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi : Telah Dikonfirmasi"/>

        <RadioButton
            android:id="@+id/radioSelesai"
            android:paddingLeft="30dp"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi Selesai"/>

        <RadioButton
            android:id="@+id/radioDitolak"
            android:paddingLeft="30dp"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi Ditolak"/>

    </RadioGroup>
</LinearLayout>