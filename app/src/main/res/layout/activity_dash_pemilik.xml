<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashPemilik">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/layoutappeardashboard"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editprofileDashPemilik"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/buttonimg"
                android:src="@drawable/editprofile"></androidx.appcompat.widget.AppCompatImageButton>



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photopemilik"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/me"></de.hdodenhof.circleimageview.CircleImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/textwelcomePemilik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/robotoregular"
            android:text="Welcome"
            android:textColor="@color/black"
            android:textSize="28sp"></TextView>

        <TextView
            android:id="@+id/namaPemilik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/robotoblack"
            android:text="Zaky Fachriansyah"
            android:textColor="@color/black"
            android:textSize="32sp"></TextView>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        android:columnCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAddKost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/ripplebutton"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/gambardashpemilik1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tambahkost">
                </ImageView>

                <TextView
                    android:id="@+id/textdash1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Kost"
                    android:textSize="15sp"
                    android:fontFamily="@font/robotoblack"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    >
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewListKost"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:background="@drawable/ripplebutton"
            android:layout_columnWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/gambardashpemilik2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/listkost">
                </ImageView>

                <TextView
                    android:id="@+id/textdash2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="List Kost"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/robotoblack"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    >
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewTransaksiKost"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:background="@drawable/ripplebutton"
            android:layout_columnWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/gambardashpemilik3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/transaksikost">
                </ImageView>

                <TextView
                    android:id="@+id/textdash3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaksi Kost"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/robotoblack"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    >
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewLogoutPemilik"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:background="@drawable/ripplebutton"
            android:layout_columnWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/gambardash4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logout">
                </ImageView>

                <TextView
                    android:id="@+id/textdash4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/robotoblack"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    >
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>